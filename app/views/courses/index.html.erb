<div class = 'booyah-box col-xs-10 col-xs-offset-1'>
  <h1 class = 'text-center'>Learn something new today!</h1>
  <hr />

  <% @courses.each do |course| %>
    <div class = 'course'>
      <div class = 'col-sm-offset-2 col-sm-8 text-center'>
	<a href='<%= course_path(course) %>'>
	  <h2><%= course.title %></h2>
	  <%= image_tag course.image, class: 'img-responsive' %>
	</a> 
      </div>
      <br />
      <div class = 'col-sm-4 col-sm-offset-2 col-xs-12 text-center description'>
	<%= course.description %>
      </div>
      <div class = 'col-sm-4 text-center col-xs-12 details'>
	<%= link_to 'More details...', course_path(course), class: 'btn btn-primary btn-large' %>
      </div>
      <br class = 'clr' />
    </div>
  <% end %>
</div>


